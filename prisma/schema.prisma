generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  role         Role
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  customer     Customer?
  storeId      String?
  store        Store?     @relation("StoreManagers", fields: [storeId], references: [id])

  transactions Transaction[]
  payments     Payment[]
}

enum Role {
  ADMIN
  GERENTE
  CLIENTE
}

model Store {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())

  managers  User[]     @relation("StoreManagers")
  products  Product[]
  customers Customer[]
}

model Product {
  id      String @id @default(uuid())
  name    String
  price   Float
  storeId String
  store   Store  @relation(fields: [storeId], references: [id])
}

model Customer {
  id      String @id @default(uuid())
  userId  String @unique
  user    User   @relation(fields: [userId], references: [id])

  storeId String
  store   Store  @relation(fields: [storeId], references: [id])

  creditLimit Float
  balance     Float @default(0)
  dueDay      Int

  transactions Transaction[]
  invoices     Invoice[]
}

model Transaction {
  id         String   @id @default(uuid())
  amount     Float
  createdAt  DateTime @default(now())

  customerId String
  customer   Customer @relation(fields: [customerId], references: [id])

  userId     String
  user       User     @relation(fields: [userId], references: [id])
}

model Invoice {
  id        String   @id @default(uuid())
  month     Int
  year      Int
  total     Float
  paid      Boolean  @default(false)
  dueDate   DateTime
  createdAt DateTime @default(now())

  customerId String
  customer   Customer @relation(fields: [customerId], references: [id])

  payments Payment[]
}

model Payment {
  id        String   @id @default(uuid())
  amount    Float
  date      DateTime @default(now())

  invoiceId String
  invoice   Invoice  @relation(fields: [invoiceId], references: [id])

  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
